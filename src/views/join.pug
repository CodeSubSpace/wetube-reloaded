extend base.pug

block content
    if errorMessage 
        span=errorMessage
    
    form(method='POST')
        input(name="name", type="text", required,  placeholder="name")
        input(name="email", type="email", require, placeholder="email")
        input(name="username", type="text", require, placeholder="username")
        input(name="password1", type="password", require, placeholder="password")
        input(name="password2", type="password", require, placeholder="password")
        input(name="location", type="text", require, placeholder="location")
        input(type="submit", value="Join")

    hr  
    div   
        span Already have an account?
        a(href="/login") Login in now &rarr;