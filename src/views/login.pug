extend base.pug

block content
    if errorMessage 
        span=errorMessage
    
    form(method='POST')
        input(name="username", type="text", require, placeholder="username")
        input(name="password1", type="password", require, placeholder="password")
        input(type="submit", value="Log in")

    hr  
    div   
        span Don't have an account?
        a(href="/join") Create one now now &rarr;