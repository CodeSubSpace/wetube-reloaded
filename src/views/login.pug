extend base.pug

block content
    if errorMessage 
        span=errorMessage
    
    form(method='POST')
        input(name="username", type="text", require, placeholder="username")
        input(name="password1", type="password", require, placeholder="password")
        input(type="submit", value="Log in")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=2bff02eeb6f8d3707f38&allow_signup=false") Continue with Github &rarr;
    hr  
    div   
        span Don't have an account?
        a(href="/join") Create one now now &rarr;